<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/layoutError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/imgAlert"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:contentDescription="@android:string/VideoView_error_text_unknown"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_error_outline_grey" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAlert"
            android:width="15dp"
            android:contentDescription="@android:string/VideoView_error_text_unknown"
            android:gravity="center"
            android:text="@string/error_404"
            android:textSize="24sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:paddingTop="55dp"
        android:paddingBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/listNewsFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>


            <LinearLayout
                android:id="@+id/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                tools:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</RelativeLayout>