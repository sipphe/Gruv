<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="8dp"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="Post picture"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/party" />

                    <LinearLayout
                        android:id="@+id/layout_post_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/layout_post_text"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/event_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Title"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="This is the event description\nThis is the event description\nThis is the event description" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="5dp"
                android:layout_below="@id/card_view"
                android:layout_marginBottom="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="Post picture"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/party_2" />

                    <LinearLayout
                        android:id="@+id/layout_post_body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/layout_post_text2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/event_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Title"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="This is the event description\nThis is the event description\nThis is the event description" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="5dp"
                android:layout_below="@id/card_view2"
                android:layout_marginBottom="8dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="Post picture"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/party_3" />

                    <LinearLayout
                        android:id="@+id/layout_post_body3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/layout_post_text3"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/event_title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Title"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="This is the event description\nThis is the event description\nThis is the event description" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                tools:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/imgAlert"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:contentDescription="@android:string/VideoView_error_text_unknown"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_error_outline_grey" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAlert"
            android:width="15dp"
            android:contentDescription="@android:string/VideoView_error_text_unknown"
            android:gravity="center"
            android:text="@string/error_404"
            android:textSize="24sp" />

    </RelativeLayout>

</RelativeLayout>